@page
@model GetandTake.Pages.Products.CreateModel
@{
}

<section id="contact" class="contact" style="margin: 5rem;">
    <form method="post">
        <div class="border p-3 mt-4">
            <div class="row pb-2">
                <h2 class="text-success pl-3">
                    Create New Product
                </h2>
            </div>

            <div class="form-group mb-2">
                <label asp-for="@Model.ProductDTO.ProductName" class="col-sm-2 col-form-label">Product Name</label>
                <input type="text" asp-for="@Model.ProductDTO.ProductName" name="productName" />
            </div>

            <div class="form-group mb-2">
                <label asp-for="@Model.ProductDTO.QuantityPerUnit" class="col-sm-2 col-form-label">QuantityPerUnit:</label>
                <input type="text" asp-for="@Model.ProductDTO.QuantityPerUnit" name="quantityPerUnit" />
            </div>

            <div class="form-group mb-2">
                <label asp-for="@Model.ProductDTO.UnitPrice" class="col-sm-2 col-form-label">Unit Price</label>
                <input type="text" asp-for="@Model.ProductDTO.UnitPrice" name="unitPrice" />
            </div>

            <div class="form-group mb-2">
                <label asp-for="@Model.ProductDTO.UnitsInStock" class="col-sm-2 col-form-label">Units in Stock</label>
                <input type="text" asp-for="@Model.ProductDTO.UnitsInStock" name="unitsInStock" />
            </div>

            <div class="form-group mb-2">
                <label asp-for="@Model.ProductDTO.UnitsOnOrder" class="col-sm-2 col-form-label">Units OnOrder </label>
                <input type="text" asp-for="@Model.ProductDTO.UnitsOnOrder" name="unitsOnOrder" />
            </div>

            <div class="form-group mb-2">
                <label asp-for="@Model.ProductDTO.ReorderLevel" class="col-sm-2 col-form-label">Reorder Level</label>
                <input type="text" asp-for="@Model.ProductDTO.ReorderLevel" name="reorderLevel" />
            </div>

            <div class="form-group mb-2">
                <label asp-for="@Model.ProductDTO.Discontinued" class="col-sm-2 col-form-label">Discontinued</label>
                <input type="checkbox" asp-for="@Model.ProductDTO.Discontinued" name="Discontinued" />
            </div>

            <div class="form-group mb-2">
                <label asp-for="@Model.ProductDTO.CategoryId" class="col-sm-2 col-form-label">Category</label>
                <select asp-for="@Model.ProductDTO.CategoryId" class="form-select" formControlName="categoryId">
                    @foreach (var category in Model.Categories)
                    {
                        <option>@category.CategoryName</option>
                    }
                </select>
            </div>

            <div class="form-group mb-2">
                <label asp-for="@Model.ProductDTO.SupplierId" class="col-sm-2 col-form-label">Supplier</label>
                <select asp-for="@Model.ProductDTO.SupplierId" class="form-select" formControlName="supplierId">
                    <option></option>
                </select>
            </div>


            <button type="submit" class="btn btn-success">Create</button>
        </div>
    </form>
</section>