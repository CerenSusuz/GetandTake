@page
@model GetandTake.Pages.Products.ProductModel

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2>Products</h2>
        </div>
    </div>
    <div class="col-6">
        <a asp-page="Create" class="btn btn-outline-success">
            Create New Product
        </a>
    </div>

    <table class="table">

        <thead>
            <tr>
                <th scope="col">ProductName</th>
                <th scope="col">QuantityPerUnit</th>
                <th scope="col">UnitPrice</th>
                <th scope="col">UnitsInStock</th>
                <th scope="col">UnitsOnOrder</th>
                <th scope="col">ReorderLevel</th>
                <th scope="col">Discontinued</th>
                <th scope="col">Category</th>
                <th scope="col">Supplier</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var product in Model.Products)
            {
                <tr>
                    <td>@product.ProductName</td>
                    <td>@product.QuantityPerUnit</td>
                    <td>@product.UnitPrice</td>
                    <td>@product.UnitsInStock</td>
                    <td>@product.UnitsOnOrder</td>
                    <td>@product.ReorderLevel</td>
                    <td>@product.Discontinued</td>
                    <td>@product.Category</td>
                    <td>@product.Supplier</td>
                </tr>
            }
        </tbody>
    </table>
</div>

