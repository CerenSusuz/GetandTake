@page
@model GetandTake.Pages.Categories.EditModel
@{
    ViewData["Title"] = "Edit Category";
}
@if (!ModelState.IsValid)
{
    <div class="col-md-offset-2 col-md-10">
        <h3 class="text-danger">Validation Errors</h3>
        <div asp-validation-summary="All"></div>
    </div>  
}
<div class="container">
    <div class="row">
        <div class="col-4">
            <div class="border p-3 mt-4">
                <label asp-for="Category.CategoryName">CategoryName</label>
                <input type="text" disabled asp-for="Category.CategoryName" />
                <hr />
                <label asp-for="Category.Description">Description</label>
                <input type="text" disabled asp-for="Category.Description" />
                <hr />
            </div>
        </div>
        <div class="col-8">
            <form method="post">
                <div class="border p-3 mt-4">
                    <div class="row pb-2">
                        <h4 class="text-dark pl-3">
                            Fill Category Details and Edit
                        </h4>
                        <hr />
                    </div>
                    <div class="mb-2">
                        <label asp-for="Category.CategoryName" class="col-sm-2 col-form-label">Category Name</label>
                        <input type="text" asp-for="Category.CategoryName" class="form-control" />
                        <span asp-validation-for="Category.CategoryName" class="text-danger"></span>
                    </div>
                    <div class="mb-2">
                        <label asp-for="Category.Description" class="col-sm-2 col-form-label">Description:</label>
                        <input type="text" asp-for="Category.Description" class="form-control" />
                        <span class="text-danger field-validation-valid" asp-validation-for="Category.Description"></span>
                    </div>
                    <button type="submit" class="btn btn-success">Edit</button>
                </div>
            </form>
        </div>
    </div>
</div>